    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [{ "path": "../../packages/schema" }, { "path": "../../packages/server" }],
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
