{
  "extends": "@repo/ts-config/packages.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "incremental": true,
    "composite": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "tsc-alias": { "watch": true },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
